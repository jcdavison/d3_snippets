html
  head
    link(rel="stylesheet", href="foundation.css")
    link(rel="stylesheet", href="d3.css")
  body
    div.row(ng-app="firecharts")
      div.large-10.columns.large-centered.panel.radius(ng-controller="chartCtrl")
        input(type="number", ng-model="newVote")
        button(id="newVote", ng-click="addVote()")
          | newVote
        input(type="number", ng-repeat="vote in votes", value="{{vote.count}}", ng-model="vote.count")
        button.tiny.alert.radius(ng-click="destroyVote(vote.$id)", ng-repeat="vote in votes")
          | destroy



